# SARA v2 Database Configuration
# Copy this file to .env.local and update with your actual database credentials

# Your new v2 database (completely separate from production)
SARAV2_DATABASE_URL="mysql://username:password@hostname:port/sarav2_database"

# Legacy Database (Optional - if you need to reference old data)
# LEGACY_DATABASE_URL="mysql://username:password@hostname:port/legacy_database"

# OpenAI API Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Application Configuration
NODE_ENV="development"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Security
JWT_SECRET="your-jwt-secret-here"
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Optional: Email Configuration (if implementing notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Optional: Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Rate Limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="900000"
